{
  "name": "arden-oak-portal",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production PORT=${PORT:-3000} next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test:build": "npm run type-check && npm run lint && npm run build",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "prestart": "npm run type-check",
    "validate-env": "node -e \"require('./src/lib/env-validation.ts').validateEnvironmentOrExit()\"",
    "deploy:production": "npm run validate-env && npm run build:production",
    "compress": "npx next-optimized-images",
    "analyze:deps": "npx depcheck",
    "analyze:bundle": "npx @next/bundle-analyzer",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:staged": "jest --bail --findRelatedTests --passWithNoTests",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:coverage:open": "jest --coverage --watchAll=false && open coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:api": "jest --testPathPattern=api",
    "test:components": "jest --testPathPattern=components",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:quality-gates": "jest --testPathPattern=qualityGates",
    "quality:check": "npm run lint && npm run type-check && npm run test:ci",
    "quality:fix": "npm run lint:fix && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "precommit": "lint-staged",
    "posttest": "npm run test:coverage"
  },
  "dependencies": {
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.54.0",
    "dotenv": "^17.2.1",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "compression": "^1.7.5",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-testing-library": "^7.6.6",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "next-optimized-images": "^2.6.2",
    "prettier": "^3.6.2",
    "supabase": "^2.33.9",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
