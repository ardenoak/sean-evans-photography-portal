{
  "version": 2,
  "regions": ["iad1"],
  "buildCommand": "npm run build:production",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://gapqnyahyskjjznyocrn.supabase.co https://tallyhq.io https://evansphoto.app.n8n.cloud; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://gapqnyahyskjjznyocrn.supabase.co; style-src 'self' 'unsafe-inline'; img-src 'self' https://gapqnyahyskjjznyocrn.supabase.co https://tallyhq.io data:; font-src 'self'; connect-src 'self' https://gapqnyahyskjjznyocrn.supabase.co https://evansphoto.app.n8n.cloud;"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}